## Local, non-public WAHA deployment

# Dashboard
WAHA_DASHBOARD_ENABLED=true
WAHA_DASHBOARD_USERNAME=admin
WAHA_DASHBOARD_PASSWORD=change-me

# Logging & media
WAHA_LOG_FORMAT=JSON
WAHA_LOG_LEVEL=info
WAHA_MEDIA_STORAGE=LOCAL
WAHA_PRINT_QR=false
WHATSAPP_DOWNLOAD_MEDIA=true
WHATSAPP_FILES_FOLDER=/app/.media
WHATSAPP_FILES_LIFETIME=0
WHATSAPP_SWAGGER_CONFIG_ADVANCED=true
WHATSAPP_SWAGGER_USERNAME=admin
WHATSAPP_SWAGGER_PASSWORD=change-me

# Engine & API
WHATSAPP_DEFAULT_ENGINE=NOWEB
# Use either hashed or plain; WAHA supports SHA512 or plain depending on build
WHATSAPP_API_KEY=REPLACE_WITH_SHA512_OR_PLAIN
WAHA_API_KEY_PLAIN=optional-plain-key

# Redis (internal only)
WAHA_APPS_ENABLED=false

# Hostname hints (not exposed publicly in this setup)
SERVICE_FQDN_WAHA=waha.local
SERVICE_URL_WAHA=http://localhost:8080
WHATSAPP_API_HOSTNAME=http://localhost:8080

