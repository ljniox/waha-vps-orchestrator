# Shared WAHA config (local only)
WAHA_DASHBOARD_ENABLED=true
WAHA_APPS_ENABLED=false
WAHA_DASHBOARD_USERNAME=admin
WAHA_DASHBOARD_PASSWORD=change-me
WAHA_LOG_FORMAT=JSON
WAHA_LOG_LEVEL=info
WAHA_MEDIA_STORAGE=LOCAL
WAHA_PRINT_QR=false
WHATSAPP_DEFAULT_ENGINE=NOWEB
WHATSAPP_DOWNLOAD_MEDIA=true
WHATSAPP_FILES_FOLDER=/app/.media
WHATSAPP_FILES_LIFETIME=0
WHATSAPP_SWAGGER_CONFIG_ADVANCED=true
WHATSAPP_SWAGGER_USERNAME=admin
WHATSAPP_SWAGGER_PASSWORD=change-me
WHATSAPP_API_HOSTNAME=http://waha:3000
SERVICE_FQDN_WAHA=waha.local
SERVICE_URL_WAHA=http://waha:3000

# Auth keys (use either hashed or plain, per your WAHA build)
WHATSAPP_API_KEY=REPLACE_WITH_SHA512_OR_PLAIN
WAHA_API_KEY_PLAIN=optional-plain-key

# Orchestrator config
INCOMING_SECRET=replace_me_webhook_secret
BUS_URL=nats://nats:4222
WAHA_BASE_URL=http://waha:3000
WAHA_TOKEN=${WHATSAPP_API_KEY}
WAHA_SEND_PATH=/api/messages/send
WAHA_CHAT_KEY=chatId
WAHA_TEXT_KEY=message
ALLOWLIST="cc cookiecutter git gh pnpm npm node python uv pip pytest supabase docker"

